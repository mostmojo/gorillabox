<div class="show-title">
  <h1>Normarilla</h1>
</div>

<div class="show-product">

  <div class="flex-tab">
  <!-- The expanding image container -->
  <div class="container">
    <!-- Close the image -->
    <span onclick="this.parentElement.style.display='none'" class="closebtn">&times;</span>

    <!-- Expanded image -->
    <img id="expandedImg" style="width:60%">

    <!-- Image text -->
    <div id="imgtext"></div>
  </div>

  <!-- The grid: four columns -->
  <div class="row">
    <% @boxes.each do |box| %>
      <%= image_tag ( "@boxes.main_image") %>
      <div class="column">
        <img id="active" class='show-product-images' src=<%= box.main_image %> alt="Protein bars" onclick="myFunction(this);">
      </div>
      <div class="column">
        <img class='show-product-images' src="<%= asset_url 'b5.jpg' %>" alt="Fruits" onclick="myFunction(this);">
      </div>
      <div class="column">
        <img class='show-product-images' src="<%= asset_url 'b6.jpg' %>" alt="Milkshakes" onclick="myFunction(this);">
      </div>
      <div class="column">
        <img class='show-product-images' src="<%= asset_url 'b7.jpg' %>" alt="Energy bars" onclick="myFunction(this);">
      </div>
    <% end %>
  </div>

  </div>

  <div class="show-right">
    <h2>Choose a subscription</h2>
    <p><strong>One off</strong></p>
    <p>monthly price</p>
    <p>Â£20.00 GBP per month</p>
    <%= link_to "Order a box", subscriptions_path, class: "btn-purple" %>
    <div class="show-overview">
      <h3>Product overview</h3>
      <p>A lovingly curated collection of healhty food & drink, ingredients and supplements designed to support activity and recovery for both men & women.</p>
    </div>
  </div>
</div>




<script>
  document.getElementById('active').click();

  function myFunction(imgs) {
  // Get the expanded image
  var expandImg = document.getElementById("expandedImg");
  // Get the image text
  var imgText = document.getElementById("imgtext");
  // Use the same src in the expanded image as the image being clicked on from the grid
  expandImg.src = imgs.src;
  // Use the value of the alt attribute of the clickable image as text inside the expanded image
  imgText.innerHTML = imgs.alt;
  // Show the container element (hidden with CSS)
  expandImg.parentElement.style.display = "block";
}
</script>
