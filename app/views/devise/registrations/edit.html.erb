<div class="container">
  <div class="form-center">


      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <%= f.error_notification %>

      <div class="form-inputs-2">
        <h2>Personal Info</h2>
        <br>
        <br>
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
        <%= f.input :current_password,
                    hint: "we need your current password to confirm your changes",
                    required: true,
                    input_html: { autocomplete: "Old password" } %>

        <h3>Change password</h2>

        <%= f.input :password,
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
                        <br>
                        <br>
        <h3>Complete your profile</h3>
                        <br>
        <%= f.input :first_name, required: false %>

        <%= f.input :last_name, required: false %>

        <%= f.input :date_of_birth, required: false, input_html: {class: "datepicker"}
                        %>
        <%= f.input :gender, as: :radio_buttons, collection: ['Female', 'Male']%>
        <%= f.input :address, input_html: { autocomplete: "delivery-address" } %>

        <%= f.input :mobile_number %>

        <%= f.input :set_goals, collection: ["Mass & Power", "Lean Muscle", "Endurance", "Fat Loss", "Other"],
                        input_html: { autocomplete: "set-goals" } %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>
         <br>
      <div class="form-actions-2">
        <%= f.button :submit, "Save Changes", class: "btn-purple" %>
      </div>
    </br>
    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>
    </br>
    <% end %>
      <br>
  </div>
</div>
